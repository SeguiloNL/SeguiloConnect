RewriteEngine On

# Sla bestaande bestanden en mappen over
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 1) Oud formaat -> netter pad (301 voor SEO/caching)
RewriteCond %{QUERY_STRING} (^|&)route=([^&]+)(&|$) [NC]
RewriteRule ^ index.php?route=%2 [QSA,L,R=301]

# 2) Mooie paden -> index.php
#   /dashboard, /sims, /orders, /plans, /users, /system
RewriteRule ^([A-Za-z0-9\-_\/]+)$ index.php?route=$1 [QSA,L]